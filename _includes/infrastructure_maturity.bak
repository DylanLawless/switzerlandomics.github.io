  <style>
    .infra-maturity { max-width: 980px; }
    .infra-maturity-sub { margin-top: 0.6rem; }

    .infra-maturity-grid{
      margin-top: 1.25rem;
      border-top: 1px solid rgba(0,0,0,0.10);
      width: 100%;
    }

    .infra-maturity-row{
      display: grid;
      grid-template-columns: 260px 1fr;
      gap: 18px;
      padding: 18px 0;
      border-bottom: 1px solid rgba(0,0,0,0.10);
      align-items: center;
      width: 100%;
    }

    .infra-maturity-row-head{
      padding: 14px 0;
      border-bottom: 1px solid rgba(0,0,0,0.12);
    }

    .infra-maturity-system{
      font-size: 1.05rem;
      color: #2f2f41;
      min-width: 0;
    }

    .infra-maturity-stages,
    .infra-maturity-mobile-labels{
      display: grid;
      grid-template-columns: repeat(5, minmax(0, 1fr));
      gap: 10px;
      align-items: center;
      min-width: 0;
    }

    /* desktop header: only the explicit <br> line breaks should occur */
    .infra-maturity-stages-head .infra-maturity-stage-label{
      text-align: center;
      font-size: 0.85rem;
      color: rgba(92,90,90,0.95);
      line-height: 1.1;
      white-space: pre-line;
      word-break: keep-all;
      overflow-wrap: normal;
      min-width: 0;
    }

    .infra-cell{
      height: 22px;
      border-radius: 4px;
      background: rgba(0,0,0,0.06);
      border: 1px solid rgba(0,0,0,0.08);
      min-width: 0;
    }

    .infra-cell.is-filled{
      background: #e5261f;
      border-color: rgba(0,0,0,0.18);
    }

    /* hidden by default (desktop) */
    .infra-maturity-mobile-labels{
      display: none;
    }

    /* mobile */
    @media (max-width: 720px){
      .infra-maturity-row{
        grid-template-columns: 1fr;
        gap: 10px;
        padding: 16px 0;
      }

      .infra-maturity-row-head{
        display: none;
      }

      .infra-cell{
        height: 20px;
      }

      .infra-maturity-mobile-labels{
        display: grid;
        margin-top: 8px;
      }

      /* mobile labels: single words, never wrap, shrink if needed */
      .infra-maturity-mobile-labels div{
        text-align: center;
        white-space: nowrap;
        font-size: clamp(0.58rem, 2.3vw, 0.78rem);
        line-height: 1.1;
        color: rgba(92,90,90,0.95);
        min-width: 0;
      }
    }
